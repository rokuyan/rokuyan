[
    // workbench.action.quickOpen のデフォルトコマンドの無効化
    {
        "key": "ctrl+e",
        "command": "-workbench.action.quickOpen"
    },
    // workbench.action.quickOpen のデフォルトコマンドの無効化
    {
        "key": "ctrl+p",
        "command": "-workbench.action.quickOpen"
    },
    // 左側のサイドバーへの切り替え
    {
        "key": "ctrl+shift+f",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    // workbench.action.toggleSidebarVisibility のデフォルトコマンドの無効化
    {
        "key": "ctrl+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    },
    // 左側のウインドウへの移動
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    // 右側のウィンドウへの移動
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    // 上側のウィンドウへの移動
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp"
    },
    // 下側のウィンドウへの移動
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown"
    },
    // ターミナルの新規作成
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.createTerminalEditor"
    },
    // ターミナルの新規作成
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.terminal.new",
        "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
    },
    // ターミナルの新規作成のデフォルトコマンドの無効化
    {
        "key": "ctrl+shift+`",
        "command": "-workbench.action.terminal.new",
        "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
    },
    // 閉じたエディタを再度開くのデフォルトコマンドの無効化
    {
        "key": "ctrl+shift+t",
        "command": "-workbench.action.reopenClosedEditor"
    },
    // markdown のなにかのコマンドの無効化
    {
        "key": "tab",
        "command": "-markdown.extension.onTabKey",
        "when": "editorTextFocus && markdown.extension.editor.cursor.inList && !editorHasMultipleSelections && !editorReadonly && !editorTabMovesFocus && !hasOtherSuggestions && !hasSnippetCompletions && !inSnippetMode && !inlineSuggestionVisible && !markdown.extension.editor.cursor.inFencedCodeBlock && !markdown.extension.editor.cursor.inMathEnv && !suggestWidgetVisible && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
    },
    // terminal へのトグルの切り替え
    {
        "key": "ctrl+t",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    // terminal の複数タブの切り替えショートカット
    {
        //"key": "alt+f1",// ctrl + h で慣れるまで頑張る
        "key": "ctrl+h",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    // Github Copilot の提案を表示
    {
        "key": "ctrl+j",
        "command": "github.copilot.terminal.suggestCommand",
        "when": "terminalFocus"
    },
    // 以下使用方法がいまいちイメージ湧いていない
    {
        "key": "ctrl+k",
        "command": "-github.copilot.terminal.suggestCommand",
        "when": "terminalFocus"
    },
    // GithubCopilotChat を左側に表示
    {
        "key": "ctrl+shift+c",
        "command": "workbench.panel.chat.view.copilot.focus"
    },
    // 新規ファイル作成
    {
        "key": "n",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
    },
    // 新規ディレクトリ作成
    {
        "key": "f",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
    },
    // リネーム
    {
        "key":"r",
        "command": "renameFile",
        "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
    },
    // 削除
    {
        "key": "d",
        "command": "deleteFile",
        "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
    },
    // browse-lite を開く
    {
        "key": "ctrl+shift+o",
        "command": "browse-lite.open"
    },
    // browse-lite を用いてデベロッパツールを開く
    {
        "key": "ctrl+shift+i",
        "command": "browse-lite.controls.debug"
    },
    // browse-lite を用いて現在のファイルを開く / 未設定
    {
        "key": "",
        "command": "browse-lite.openActiveFile"
    },
    // browse-lite のページの更新 → エディタ側のデバッグターミナルと競合するので注意
    {
        "key": "f5",
        "command": "browse-lite.controls.refresh"
    },
    // デバッグターミナルの起動
    {
        "key": "ctrl+shift+r",
        "command": "workbench.action.debug.start",
        "when": "debuggersAvailable && debugState == 'inactive'"
    },
    // デバッグターミナルの起動のデフォルトコマンドの無効化
    {
        "key": "f5",
        "command": "-workbench.action.debug.start",
        "when": "debuggersAvailable && debugState == 'inactive'"
    },
    // デバッグターミナルの停止
    {
        "key": "ctrl+shift+r",
        "command": "workbench.action.debug.continue",
        "when": "debugState == 'stopped'"
    },
    // デバッグターミナルの停止のデフォルトコマンドの無効化
    {
        "key": "f5",
        "command": "-workbench.action.debug.continue",
        "when": "debugState == 'stopped'"
    },
    // デバッグターミナルの再開
    {
        "key": "ctrl+shift+r",
        "command": "debug.openView",
        "when": "!debuggersAvailable"
    },
    // デバッグターミナルの再開のデフォルトコマンドの無効化
    {
        "key": "f5",
        "command": "-debug.openView",
        "when": "!debuggersAvailable"
    },
    {// デフォルトキーバインド削除
        "key": "ctrl+shift+i",
        "command": "-notebook.formatCell",
        "when": "editorHasDocumentFormattingProvider && editorTextFocus && inCompositeEditor && notebookEditable && !editorReadonly && activeEditor == 'workbench.editor.notebook'"
    },
    {// デフォルトキーバインド削除
        "key": "ctrl+shift+i",
        "command": "-editor.action.formatDocument",
        "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
    },
    {// デフォルトキーバインド削除
        "key": "ctrl+shift+i",
        "command": "-editor.action.formatDocument.none",
        "when": "editorTextFocus && !editorHasDocumentFormattingProvider && !editorReadonly"
    },
    {// デフォルトキーバインド削除
        "key": "ctrl+shift+i",
        "command": "-notebook.format",
        "when": "notebookEditable && !editorTextFocus && activeEditor == 'workbench.editor.notebook'"
    }
]
