{
    //"terminal.integrated.defaultLocation": "editor",// ターミナルをエディタ内に表示
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": false
    },

    "editor.stickyScroll.enabled": true,// stickyScroll を有効にする
    "editor.stickyScroll.maxLineCount": 5,// stickyScroll の最大行数

    "clangd.path": "/home/rogita/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/16.0.2/clangd_16.0.2/bin/clangd",
    "git.confirmSync": false,
    "editor.fontSize": 14,
    "chat.editor.fontSize": 14,
    "editor.wordWrap": "on",// 1 行が長くならないように折り返す
    "editor.insertSpaces": true,// tab をスペースとして扱う
    "extensions.autoUpdate": true,// 拡張機能の自動更新
    "files.autoGuessEncoding": true,// ファイルの文字コードを自動判別
    "workbench.colorTheme": "Default Dark+",// テーマ
    "security.workspace.trust.untrustedFiles": "open",// 信頼されていないファイルを開く
    "workbench.startupEditor": "none",// 起動時にファイルを開かない
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "redhat.telemetry.enabled": true,
    "editor.acceptSuggestionOnEnter": "off",
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
        "editor.formatOnType": true,
        "editor.tabSize": 4
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "remote.SSH.remotePlatform": {// リモートの OS を指定
        "46.51.226.248": "linux"
    },
    "files.trimTrailingWhitespace": true,// 行末の空白を削除
    "window.title": "${activeEditorMedium}${separator}${rootName}",
    "workbench.iconTheme": "material-icon-theme",
    "yaml.schemas": {
        "file:///home/rogita/.vscode-server/extensions/docsmsft.docs-yaml-1.0.1/dist/toc.schema.json": "/toc\\.yml/i"
    },
    "hediet.vscode-drawio.resizeImages": null,// 画像のサイズを変更しない
    "jupyter.interactiveWindow.creationMode": "perFile",// インタラクティブウィンドウをファイルごとに作成
    "notebook.output.textLineLimit": 50,// 出力セルの行数を 50 行に制限

    "editor.unicodeHighlight.invisibleCharacters": false,// 不可視文字を表示しない
    "glassit.alpha": 220,
    "glassit.step": 2,
    "window.zoomLevel": 0,
    "powermode.enabled": true,
    "powermode.combo.counterSize": 2,
    "powermode.combo.timeout": 0,
    "powermode.combo.counterEnabled": "hide",
    "powermode.combo.timerEnabled": "hide",
    "powermode.presets": "fireworks",
    "powermode.shake.intensity": 0,
