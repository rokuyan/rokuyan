    // ----------------
    // editor settings
    // ----------------
    "editor.glyphMargin": false,// 行数表示のマージンを非表示
    "editor.mouseWheelZoom": true,// ホイールでズーム出来るようにする
    "editor.stickyScroll.enabled": true,// stickyScroll を有効にする
    "editor.stickyScroll.maxLineCount": 5,
    "editor.wordWrap": "on",// 1 行が長くならないように折り返す
    "editor.insertSpaces": true,// tab をスペースとして扱う
    "editor.fontSize": 14,// フォントサイズ
    "editor.acceptSuggestionOnEnter": "off",
    "editor.unicodeHighlight.includeComments": true,
    "editor.unicodeHighlight.invisibleCharacters": false,// 不可視文字を表示しない
    "editor.linkedEditing": true,
    "editor.minimap.enabled": false,
    "editor.rulers": [
        {
            "column": 80,
            "color": "#00FF0010"
        },
        {
            "column": 100,
            "color": "#BDB76B15"
        },
        {
            "column": 120,
            "color": "#FA807219"
        }
    ],
    "editor.codeActionsOnSave": {// 保存時に自動で実行するコマンド
        "source.organizeImports": "explicit"// import の自動整理
    },

    // -------------------
    // workbench settings
    // -------------------
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.revealIfOpen": true,
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#0ecf8f", // カーソルの色を薄緑にする
        "editorStickyScroll.background": "#2a0f9f",// スクロールバーの背景色
        "editorStickyScrollHover.background": "#282936",// スクロールバーのホバー時の背景色
        "contrastActiveBorder": "#0ecf8f",// アクティブなウィンドウのボーダーの色を変更
        "tab.activeBackground": "#2a0f9f",// アクティブなタブの背景色
        "editorLineNumber.foreground": "#41a6d9",// 行数表示の色
        "editorLineNumber.activeForeground": "#ff6a00",// 行数表示の色(カーソル行)
        "explorer.hoverHighlight": {
            "background": "#f0f0f0", // 選択候補の背景色 / 正直違いどこに出てるかよくわからん
            "border": "#000000" // 選択候補の枠線色 / 正直違いどこに出てるかよくわからん
        },
        "explorer.selectionHighlight": {
            "background": "#c0c0c0", // 選択中のファイルの背景色 / 正直違いどこに出てるかよくわからん
            "border": "#000000" // 選択中のファイルの枠線色 / 正直違いどこに出てるかよくわからん
        }
    },
    "workbench.tree.indent": 20,
    "workbench.colorTheme": "Default Dark+",// テーマ
    "workbench.startupEditor": "none",// 起動時にファイルを開かない

    // ---------------
    // files settings
    // ---------------
    "files.trimTrailingWhitespace": true,// 行末の空白を削除
    "files.autoGuessEncoding": true,// ファイルの文字コードを自動判別
    "files.exclude": {// gitignore に含まれていなくても自動的に無視する設定
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*:Zone.Identifier": true
    },

    // ----------------
    // window settings
    // ----------------
    "window.menuBarVisibility": "toggle",
    "window.title": "${activeEditorMedium}${separator}${rootName}",

    // -------------
    // git settings
    // -------------
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "never",
    "git.suggestSmartCommit": false,

    // ------------------
    // terminal settings
    // ------------------
    "terminal.integrated.tabs.hideCondition": "never",
    "terminal.integrated.enablePersistentSessions": false,

    // -----------------
