    // -----------------
    "glassit.alpha": 220,// VSCode の透明度
    "glassit.step": 2,

    "explorer.openEditors.visible": 1,// 開いているエディタで表示される件数。 0 にするとエラーが出るので、最小の 1 を指定

    "emmet.variables": {
