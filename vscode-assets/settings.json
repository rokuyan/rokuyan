    // ------------------------
    // Insert mode key bindings
    // ------------------------
    "vim.insertModeKeyBindings": [
        { "before": ["j", "j"], "after": ["<Esc>"] },// jj でインサートモードから抜ける
        { "before": [";", ";"], "commands": ["editor.action.triggerSuggest"] }// ;; で補完
    ],

    // ------------------------
    // Normal mode key bindings
    // ------------------------
    "vim.normalModeKeyBindingsNonRecursive": [// normal モードのときのキーバインド設定
        {// easymotion のショートカットを f に変更
            "before": [
                "f"
            ],
            "after": [
                "leader",
                "leader",
                "leader",
                "b",
                "d",
                "w"
            ]
        },
        { "before": [">"],"commands" : ["editor.action.indentLines"]},//インデント追加
        { "before": ["<"],"commands" : ["editor.action.outdentLines"]},// インデント削除
        { "before": ["<C-h>"], "after": ["<C-w>", "h"] },// ctrl + h で左ウインドウへ移動
        { "before": ["<C-j>"], "after": ["<C-w>", "j"] },// ctrl + j で下ウインドウへ移動
        { "before": ["<C-k>"], "after": ["<C-w>", "k"] },// ctrl + k で上ウインドウへ移動
        { "before": ["<C-l>"], "after": ["<C-w>", "l"] },// ctrl + l で右ウインドウへ移動
        { "before": ["n"], "after": ["n", "z", "z"] },// 検索結果を画面中央付近に表示
        { "before": ["N"], "after": ["N", "z", "z"] },// 検索結果を画面中央付近に表示
        { "before": ["*"], "after": ["*", "z", "z"] },// 検索結果を画面中央付近に表示
        { "before": ["#"], "after": ["#", "z", "z"] },// 検索結果を画面中央付近に表示
        { "before": ["<C-t>"], "commands": ["workbench.action.terminal.new"] },// ctrl + t でターミナルを開く
        { "before": ["J"], "after": ["1", "0", "j"] }, //移動を早める
        { "before": ["K"], "after": ["1", "0", "k"] }, //移動を早める
        { "before": ["H"], "after": ["^"] }, //端に移動
        { "before": ["L"], "after": ["$"] }, //端に移動
        { "before": ["<Leader>", "h"], "after": ["g", "T"] }, //Tab 移動
        { "before": ["<Leader>", "j"], "after": ["g", "t"] }, //Tab 移動
        { "before": ["<Leader>", "k"], "after": ["g", "T"] }, //Tab 移動
        { "before": ["<Leader>", "l"], "after": ["g", "t"] }, //Tab 移動
        { "before": ["<Leader>", "o"], "after": ["o", "<ESC>"] }, //空の行を挿入
        { "before": ["<Leader>", "O"], "after": ["O", "<ESC>"] },//空の行を挿入
        { "before": ["<Leader>", "q"], "commands": [":q!"] }, //tabを閉じる
        { "before": ["<Leader>", "x"], "commands": [":qa!"] }, //すべてを閉じる
        { "before": ["<Leader>", "w"], "commands": [":wa"] }, //すべてを保存
        {
            "before": ["<Leader>", ":"],
            "commands": [{ "command": "workbench.action.showCommands" }]//コマンドパレット
        },
        {
            "before": ["<Leader>", "c"],
            "commands": [{ "command": "editor.action.commentLine" }]// コメント行にしてしまう
        },
        {
            "before": ["<Leader>", ";"],
            "commands": [{ "command": "workbench.action.quickOpen" }]// ファイル検索
        },
        {
            "before": ["<leader>", "d"],
            "commands": ["editor.action.revealDefinition"]// 定義元へ移動
        },
        {
            "before": ["<leader>", "i"],
            "commands": ["editor.action.organizeImports"]// 自動 import の整理。基本的には保存するだけで効くようにはしてるけど念の為設定(Java 向け)
        },
        // <C-o> で前の場所に戻る / <C-i> で進むはすでに入ってる
        // 以下マルチカーソル
        //{ "before": ["<C-n>"], "after": ["g", "b"] }, //選択した文字に対して増やす
        //{// タブ移動とかぶっちゃうので注意
        //    "before": ["<C-k>"],
        //    "commands": [{ "command": "editor.action.insertCursorAbove" }]
        //},
        //{// タブ移動とかぶっちゃうので注意
        //    "before": ["<C-j>"],
        //    "commands": [{ "command": "editor.action.insertCursorBelow" }]
        //}
    ],

    // ------------------------
    // Visual mode key bindings
    // ------------------------
    "vim.visualModeKeyBindingsNonRecursive": [
        // vを押した直後はvのコマンドが残っているので注意
        // visual mode 後にすぐ実行したいものは、二重で定義する。
        { "before": ["J"], "after": ["1", "0", "j"] }, //移動を早める
        { "before": ["v", "J"], "after": ["1", "0", "j"] }, //移動を早める
        { "before": ["K"], "after": ["1", "0", "k"] }, //移動を早める
        { "before": ["v", "K"], "after": ["1", "0", "k"] }, //移動を早める
        { "before": ["H"],"after": ["^"]},//端に移動
        { "before": ["L"],"after": ["$","h"]}, //端に移動
        { "before": ["v","H"],"after": ["^"]}, //端に移動
        { "before": ["v","L"],"after": ["$","h"]},// 端に移動
        {"before": ["t"], "commands": ["extension.translateLinesUnderCursor"]} // 翻訳

    ],

    // ------------
    // vim 共通設定
    // ------------
    "vim.camelCaseMotion.enable": true,// leader + w, e, b で camelCase の単語内での移動が可能になる
