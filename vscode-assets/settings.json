        //    "before": ["<C-k>"],
        //    "commands": [{ "command": "editor.action.insertCursorAbove" }]
        //},
        //{// タブ移動とかぶっちゃうので注意
        //    "before": ["<C-j>"],
        //    "commands": [{ "command": "editor.action.insertCursorBelow" }]
        //}
    ],

    // ------------------------
    // Visual mode key bindings
    // ------------------------
    "vim.visualModeKeyBindingsNonRecursive": [
        // v を押した直後は v のコマンドが残っているので注意
        // visual mode 後にすぐ実行したいものは、二重で定義する。
        { "before": ["J"], "after": ["1", "0", "j"] }, //移動を早める
        { "before": ["v", "J"], "after": ["1", "0", "j"] }, //移動を早める
        { "before": ["K"], "after": ["1", "0", "k"] }, //移動を早める
        { "before": ["v", "K"], "after": ["1", "0", "k"] }, //移動を早める
        { "before": ["H"],"after": ["^"]},//端に移動
        { "before": ["L"],"after": ["$","h"]}, //端に移動
        { "before": ["v","H"],"after": ["^"]}, //端に移動
        { "before": ["v","L"],"after": ["$","h"]},// 端に移動
        {"before": ["t"], "commands": ["extension.translateLinesUnderCursor"]}, // 翻訳
        {"before": ["y"], "after": ["y", "g", "v"]},// yank した後に visual mode から抜けないようにする
        {"before": ["d"], "after": ["\"", "_", "d"]}// visual mode で d したときにレジスタに保存させない
    ],
    // ------------
    // vim 共通設定
    // ------------
    "vim.camelCaseMotion.enable": true,// leader + w, e, b で camelCase の単語内での移動が可能になる
    "vim.useSystemClipboard": true,// クリップボードを使う
    "vim.hlsearch": true,// 検索時にハイライトする
    "vim.visualstar": true,// visual モードで * と # を使えるようにする
    "vim.easymotion": true,// easymotion (f で検索するやつ) を使う
    "vim.easymotionMarkerForegroundColorOneChar": "rgba(0,240,170,0.9)", //1 文字のときの色(緑っぽくした)
    "vim.statusBarColorControl": false,// ステータスバーの色を変更するかどうか
    "vim.leader": "<space>",// リーダーキーをスペースにする
    "vim.autoindent": true,// 自動インデント
    "vim.surround": true,// カッコの自動挿入
    "vim.highlightedyank.enable": true,// ヤンクしたときにハイライトする
    "vim.highlightedyank.color": "rgba(0, 240, 170, 0.5)",// ハイライトの色
    "vim.highlightedyank.duration": 1500,// ハイライトの時間
    "vim.autoSwitchInputMethod.enable": true, // 入力メソッドの自動切り替え(linux 用)
    "vim.commandLineModeKeyBindings": [],

